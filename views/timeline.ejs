<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Revision Timeline</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col items-center justify-center">
  <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8 mt-10">
    <h1 class="text-2xl font-bold text-yellow-700 mb-6 text-center">
      Revision Timeline for "<%= title %>"
    </h1>
    <% if (error) { %>
      <div class="bg-red-100 text-red-700 p-4 rounded shadow mb-4 text-center">
        <%= error %>
      </div>
    <% } %>
    <% if (timeline && timeline.length) { %>
      <div class="relative border-l-2 border-yellow-400 ml-4">
        <% timeline.forEach(function(rev, i) { %>
          <div class="mb-8 ml-6">
            <div class="absolute w-3 h-3 bg-yellow-400 rounded-full mt-1.5 -left-1.5 border border-white"></div>
            <div class="flex flex-col sm:flex-row sm:items-center gap-2">
              <span class="text-xs text-gray-500"><%= new Date(rev.timestamp).toLocaleString() %></span>
              <span class="font-semibold text-yellow-700"><%= rev.user %></span>
            </div>
            <% if (rev.comment) { %>
              <div class="text-gray-700 text-sm mt-1 ml-2 italic">"<%= rev.comment %>"</div>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-500">No revision data available for this page.</p>
    <% } %>
  </div>
</body>
</html>
